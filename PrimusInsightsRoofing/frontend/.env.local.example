# PRIMUS HOME PRO - Environment Variables Template
# Copy this to .env.local and fill in your actual values

# Database (Vercel Postgres in production, local Postgres in dev)
DATABASE_URL="postgresql://user:password@localhost:5432/primus_home_pro?schema=public"

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Anthropic Claude AI
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Stripe Payments
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_AGENCY=price_xxxxx

# Twilio SMS (optional)
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# Resend Email (optional)
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=hello@primushomepro.com

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Cron Job Security
CRON_SECRET=your-random-secret-here
